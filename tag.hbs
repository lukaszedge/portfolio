{{> head}}
    {{> top}}
    <main>
        <section class="hero">
            <header>
                {{#tag}}
                    <p>
                        {{postsNumber}}
                        Item(s)
                    </p>
                    <h1>{{name}}</h1>
                    {{#if description}}
                        <p>
                            {{description}}
                        </p>
                    {{/if}}
                {{/tag}}
            </header>
        </section>
        <div class="category {{@config.custom.layoutTags}}">
            {{#each posts}}
                <article>
                    {{#featuredImage}}
                        {{#if url}}
                            <div class="card__image">
                                {{#if @config.custom.lazyLoad}}
                                    <a href="{{../url}}" class="card__image-link" style="padding-bottom: calc({{height}}/{{width}} * 100%)">
										<img
                                        class="lazyload"
                                       {{#checkIf @config.custom.lazyLoadEffect '!==' "lqip" }}
                                           src="{{urlXs}}" 
                                             {{else}}
                                            data-src="{{url}}"  
                                        {{/checkIf}}
                                        data-srcset="{{srcset}}"
                                        data-sizes="auto"
                                        alt="{{alt}}"></a>
                                {{else}}
                                    <a href="{{../url}}" class="card__image-link" style="padding-bottom: calc({{height}}/{{width}} * 100%)">
										<img src="{{url}}" sizes="{{sizes}}" srcset="{{srcset}}" alt="{{alt}}">
								    </a>
                                {{/if}}
                            </div>
                        {{/if}}
                    {{/featuredImage}}
                    <header class="card__header">
                        <p>
                            <time datetime="{{date createdAt 'YYYY-MM-DDTHH:mm'}}">
                                {{#checkIf @config.custom.formatDate '!=' 'custom'}}
                                    {{date createdAt @config.custom.formatDate}}
                                {{else}}
                                    {{date createdAt @config.custom.formatDateCustom}}
                                {{/checkIf}}
                            </time>
                        </p>
                        <h2>
                            <a href="{{url}}" class="inverse">
                                {{title}}
                            </a>
                        </h2>
                    </header>
                    {{#if hasCustomExcerpt}}
                        {{{ excerpt }}}
                    {{else}}
                        <p>{{{ excerpt }}}</p>
                    {{/if}}
                </article>
            {{/each}}
        </div>
        {{> pagination}}
    </main>
    {{> footer}}
